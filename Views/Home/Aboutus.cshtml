@{
    ViewData["Title"] = "About Us";
}

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/home.css" /> <!-- make sure this exists -->

<section class="about-section py-5">
    <div class="container">
        <h1 class="section-title text-center mb-5">About Antique Auctions</h1>

        <div class="row align-items-center g-5">
            <!-- Left: About content -->
            <div class="col-lg-7">
                <div class="about-content">
                    <h3 class="about-heading mb-3">Our Mission</h3>
                    <p class="about-text">
                        Antique Auctions is dedicated to connecting collectors and enthusiasts with rare and exquisite antiques.
                        Our mission is to provide a trustworthy platform where users can buy, sell, and bid on items that carry historical value and timeless beauty.
                    </p>

                    <img src="~/Images/your-about-us-image.jpg" alt="Antique Shop" class="img-fluid rounded-4 shadow my-4" />

                    <h3 class="about-heading mb-3">Our Promise</h3>
                    <p class="about-text">
                        From antique furniture and jewelry to vintage collectibles, every item is carefully curated to ensure authenticity and quality.
                        We aim to make the experience of discovering and bidding on antiques both exciting and reliable.
                    </p>
                    <p class="about-text">
                        Our team is passionate about antiques and committed to providing exceptional customer service.
                        Whether you are a seasoned collector or a first-time bidder, Antique Auctions is here to make your journey memorable.
                    </p>
                </div>
            </div>

            <!-- Right: Contact Form -->
            <div class="col-lg-5">
                <div class="card about-card shadow-sm p-4">
                    <div class="card-body">
                        <h3 class="mb-3 text-primary">Contact Us</h3>
                        <p class="text-muted small mb-4">Have a question or need support? Fill out the form below to get in touch with our team.</p>

                        <form asp-controller="Home" asp-action="Contact" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Your Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Your Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" name="subject" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-gold w-100">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
