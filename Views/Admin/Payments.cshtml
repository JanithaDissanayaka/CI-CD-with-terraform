@model IEnumerable<Project_1.Models.Payment>

@{
    ViewData["Title"] = "Payment Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4" style="color: #4b2c20; font-weight: 600;">Payment Records</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No payment records found.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Payment ID</th>
                    <th scope="col">Listing ID</th>
                    <th scope="col">Amount (LKR)</th>
                    <th scope="col">Payment Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pay in Model)
                {
                    <tr>
                        <td>@pay.PaymentId</td>
                        <td>@pay.ListingId</td>
                        <td>LKR @pay.Amount.ToString("N2")</td>
                        <td>@pay.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Dashboard", "Admin")" style="padding-left:550px;"><i class="bi bi-house-door category-icon"></i></a>
      
    }
</div>

<style>
    table.table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    h2 {
        font-size: 1.8rem;
    }
</style>
