@model IEnumerable<Project_1.Models.Bid>

@{
    ViewData["Title"] = "Won Bids";
}

<h2>Won Bids</h2>

@if (!Model.Any())
{
    <p>You haven't won any bids yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Auction Item</th>
                <th>Winning Price</th>
                <th>Closed On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bid in Model)
            {
                <tr>
                    <td>@bid.Listing.Title</td>
                    <td>@bid.Price.ToString("N2")</td>
                    <td>@bid.Listing.ClosingTime.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
