@model IEnumerable<Project_1.Models.Payment>

@{
    ViewData["Title"] = "Payment Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3 text-center">Payment Records</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Payment ID</th>
            <th>Listing ID</th>
            <th>Amount (LKR)</th>
            <th>Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pay in Model)
        {
            <tr>
                <td>@pay.PaymentId</td>
                <td>@pay.ListingId</td>
                <td>@pay.Amount.ToString("N2")</td>
                <td>@pay.PaymentDate.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
