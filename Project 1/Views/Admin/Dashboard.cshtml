@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-5" style="color: #4b2c20; font-weight: 600;">Admin Dashboard</h2>

    <div class="row g-4">
        <!-- Users Card -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center h-100 hover-shadow">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 mb-3 text-primary"></i>
                    <h5 class="card-title mb-3">Users</h5>
                    <p class="card-text">Manage all registered users.</p>
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>

        <!-- Listings Card -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center h-100 hover-shadow">
                <div class="card-body">
                    <i class="bi bi-card-checklist display-4 mb-3 text-success"></i>
                    <h5 class="card-title mb-3">Listings</h5>
                    <p class="card-text">View and manage all listings.</p>
                    <a href="@Url.Action("Listings", "Admin")" class="btn btn-success">Manage Listings</a>
                </div>
            </div>
        </div>  

        <!-- Payments Card -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center h-100 hover-shadow">
                <div class="card-body">
                    <i class="bi bi-wallet2 display-4 mb-3 text-info"></i>
                    <h5 class="card-title mb-3">Payments</h5>
                    <p class="card-text">View all payment transactions.</p>
                    <a href="@Url.Action("Payments", "Admin")" class="btn btn-info text-white">View Payments</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card i {
        transition: transform 0.3s ease;
    }

    .card:hover i {
        transform: scale(1.2);
    }
</style>
