@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-4">Admin Dashboard</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3">
                <h4>Users</h4>
                <a href="@Url.Action("Users", "Admin")" class="btn btn-primary">Manage Users</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3">
                <h4>Listings</h4>
                <a href="@Url.Action("Listings", "Admin")" class="btn btn-success">Manage Listings</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3">
                <h4>Bids</h4>
                <a href="@Url.Action("Bids", "Admin")" class="btn btn-warning">Manage Bids</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm p-3">
                <h4>Payments</h4>
                <a href="@Url.Action("Payments", "Admin")" class="btn btn-info">View Payments</a>
            </div>
        </div>
    </div>
</div>
