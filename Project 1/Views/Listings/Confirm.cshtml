@{
    ViewData["Title"] = "Payment Confirmation";
    Layout = "_Layout"; // Use the main layout
}

<div class="container mt-5">
    <section class="card shadow-sm p-5 text-center" style="background-color: #fdfbf7; border-radius: 10px;">
        <h1 class="display-4" style="color: #4b2c20;">Payment Successful!</h1>
        <p class="lead text-muted mb-4">Thank you for your purchase.</p>

        <p class="mb-4" style="font-size: 1.1rem; color: #4b2c20;">
            You can now view your purchased item in your listings.
        </p>

        <a asp-controller="Listings" asp-action="MyListings" class="btn btn-gold btn-lg">
            Go to My Listings
        </a>
    </section>
</div>
