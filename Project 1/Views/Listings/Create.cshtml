@model Project_1.Models.ListingVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = "Create Listing";
    Layout = "_Layout";
}

<div class="container mt-5">
    <section class="card shadow-sm p-5" style="background-color: #fdfbf7; border-radius: 10px;">
        <h1 class="display-4 text-center mb-3" style="color: #4b2c20;">Create New Listing</h1>
        <p class="text-center text-muted mb-4">Add your antique item to start the auction</p>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter item title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter item description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" class="form-select">
                    <option value="">-- Select a Category --</option>
                    <option value="Furniture">Furniture</option>
                    <option value="Art">Art & Paintings</option>
                    <option value="Jewelry">Jewelry</option>
                    <option value="Collectibles">Collectibles</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Starting Bid -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Starting Bid</label>
                <input asp-for="Price" class="form-control" placeholder="Enter starting price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label asp-for="Image" class="form-label">Upload Image</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Auction Duration -->
            <div class="mb-3">
                <label class="form-label">Auction Duration</label>
                <div class="d-flex gap-3 flex-wrap">
                    <div class="flex-grow-1">
                        <input type="number" asp-for="ClosingDays" min="0" max="30" class="form-control" placeholder="Days" />
                        <small class="text-muted">Days</small>
                        <span asp-validation-for="ClosingDays" class="text-danger d-block"></span>
                    </div>
                    <div class="flex-grow-1">
                        <input type="number" asp-for="ClosingHours" min="0" max="23" class="form-control" placeholder="Hours" />
                        <small class="text-muted">Hours</small>
                        <span asp-validation-for="ClosingHours" class="text-danger d-block"></span>
                    </div>
                    <div class="flex-grow-1">
                        <input type="number" asp-for="ClosingMinutes" min="0" max="59" class="form-control" placeholder="Minutes" />
                        <small class="text-muted">Minutes</small>
                        <span asp-validation-for="ClosingMinutes" class="text-danger d-block"></span>
                    </div>
                </div>
            </div>

            <!-- Hidden User ID -->
            <input type="hidden" asp-for="IdentityUserId" value="@userManager.GetUserId(User)" />

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-gold btn-lg w-50 mt-3">Create Listing</button>
            </div>
        </form>

        <!-- Back Link -->
        <div class="text-center mt-3">
            <a asp-action="Index" class="text-decoration-none text-muted">Back to Listings</a>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
