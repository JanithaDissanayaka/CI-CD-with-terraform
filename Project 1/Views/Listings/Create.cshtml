@model Project_1.Models.ListingVM
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = "Create Listing";
    Layout = "_Layout"; // Ensure consistent layout
}

<div class="container mt-5">
    <section class="card shadow-sm p-5" style="background-color: #fdfbf7; border-radius: 10px;">
        <h1 class="display-4 text-center mb-4" style="color: #4b2c20;">Create New Listing</h1>
        <p class="text-center text-muted mb-4">Add your antique item to start the auction</p>

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter item title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter item description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Starting Bid</label>
                <input asp-for="Price" class="form-control" placeholder="Enter starting price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">Upload Image</label>
                <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Corrected hidden input -->
            <input type="hidden" asp-for="IdentityUserId" value="@userManager.GetUserId(User)" />

            <div class="text-center">
                <button type="submit" class="btn btn-gold w-50 mt-3">Create Listing</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="text-decoration-none text-muted">Back to Listings</a>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
