@model List<Project_1.Models.Listing>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css" />

<header class="hero-section text-center">
    <div class="hero-content">
        <h1 class="hero-title">Bid for Timeless Treasures</h1>
        <p class="hero-subtitle">Explore our exclusive collection of antiques and rare collectibles.</p>

        <a href="/Listings" class="btn btn-gold btn-lg">Start Bidding</a>

        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-gold btn-lg">Admin Dashboard</a>
        }
    </div>
</header>


<section class="section container text-center">
    <h2 class="section-title">Browse by Category</h2>
    <div class="row">
        <div class="col-md-3 col-6">
            <a asp-controller="Listings" asp-action="Index" asp-route-category="Furniture" class="category-card">
                <i class="bi bi-lamp-fill category-icon"></i>
                <h5>Furniture</h5>
            </a>
        </div>
        <div class="col-md-3 col-6">
            <a asp-controller="Listings" asp-action="Index" asp-route-category="Art" class="category-card">
                <i class="bi bi-palette-fill category-icon"></i>
                <h5>Art & Paintings</h5>
            </a>
        </div>
        <div class="col-md-3 col-6">
            <a asp-controller="Listings" asp-action="Index" asp-route-category="Jewelry" class="category-card">
                <i class="bi bi-gem category-icon"></i>
                <h5>Jewelry</h5>
            </a>
        </div>
        <div class="col-md-3 col-6">
            <a asp-controller="Listings" asp-action="Index" asp-route-category="Collectibles" class="category-card">
                <i class="bi bi-book-half category-icon"></i>
                <h5>Collectibles</h5>
            </a>
        </div>
    </div>
</section>
<section class="section section-bg">
    <div class="container">
        <h2 class="section-title text-center">Featured Auctions</h2>

        @if (Model != null && Model.Any())
        {
            <div class="row justify-content-center">
                @foreach (var listing in Model)
                {
                    var highestBid = listing.Bids?.OrderByDescending(b => b.Price).FirstOrDefault();
                    var currentPrice = highestBid?.Price ?? listing.Price;

                    <div class="col-lg-4 col-md-6 mb-4 d-flex">
                        <div class="auction-card card flex-fill">
                            <div class="card-image-top">
                                <img src="~/Images/@listing.ImagePath" alt="@listing.Title" class="card-img-top" />
                                @if (listing.IsSold)
                                {
                                    <div class="card-overlay">
                                        <span>Sold</span>
                                    </div>
                                }
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@listing.Title</h5>
                                <p class="card-price">
                                    Current Bid: <strong>Rs @currentPrice.ToString("N2")</strong>
                                </p>
                                <p class="card-text">
                                    <strong>Time Remaining:</strong>
                                    <span class="auction-timer @(listing.IsSold ? "timer-closed" : "timer-active")"
                                          data-closing-time="@listing.ClosingTime.ToString("o")"
                                          data-listing-id="@listing.Id">
                                        @(listing.IsSold ? "Bidding Closed" : "Calculating...")
                                    </span>
                                </p>

                                <a href="/Listings/Details/@listing.Id" class="btn btn-warning text-white w-100 btn-bid @(listing.IsSold ? "disabled" : "")">
                                    @(listing.IsSold ? "View Details" : "Place Bid")
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-muted fs-5">No active auctions available right now.</p>
        }
    </div>
</section>

<section class="section container text-center">
    <h2 class="section-title">How It Works</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="how-it-works-step">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                    <div class="step-icon">1</div>
                </a>
                <h3>Register</h3>
                <p>Create a free account to start bidding and selling.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="how-it-works-step">
                <a class="nav-link"
                   asp-area="" asp-controller="Listings" asp-action="Index"><div class="step-icon">2</div></a>
                <h3>Find & Bid</h3>
                <p>Browse our listings and place your bid on items you love.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="how-it-works-step">
                <a class="nav-link" asp-area="" asp-controller="Listings" asp-action="WonBids">
                    <div class="step-icon">3</div>
                </a>
                <h3>Win & Collect</h3>
                <p>If you're the highest bidder, the treasure is yours!</p>
            </div>
        </div>
    </div>
</section>

